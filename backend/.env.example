# PostgreSQL Database Configuration
# REQUIRED: Must point to PostgreSQL (not SQLite or other DB)
DB_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/energia

# JWT Secret for token signing
# IMPORTANT: Change this to a secure random string in production
JWT_SECRET=your-secret-key-change-me-in-production

# Email/SMTP Configuration (optional, required only if sending invites/notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=ENERGIA ALERTS <your-email@gmail.com>
MAIL_STARTTLS=true
MAIL_SSL_TLS=false
MAIL_USE_CREDENTIALS=true

# MQTT Configuration (optional, required only if running mqtt_ingest.py)
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_TOPIC=energia/sensors/#

# Model Configuration (optional, required only if using Prophet model)
MODEL_PATH=models/prophet_model.joblib
